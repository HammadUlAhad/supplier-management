@model IEnumerable<SupplierManagement.Models.ViewModels.SupplierViewModel>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Suppliers</h1>
    <a class="btn btn-primary" asp-action="Create">Add Supplier</a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreatedByUser)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreatedOn)
                                    </th>
                                    <th>Active Rates</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedByUser)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedOn)
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@item.SupplierRates.Count</span>
                                            @if (item.SupplierRates.Any())
                                            {
                                                <a class="btn btn-sm btn-outline-info" asp-controller="SupplierRate" asp-action="BySupplier" asp-route-id="@item.SupplierId">View Rates</a>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.SupplierId">View</a>
                                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.SupplierId">Edit</a>
                                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.SupplierId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <h4 class="text-muted">No suppliers found</h4>
                        <p class="text-muted">Get started by adding your first supplier.</p>
                        <a class="btn btn-primary" asp-action="Create">Add First Supplier</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
