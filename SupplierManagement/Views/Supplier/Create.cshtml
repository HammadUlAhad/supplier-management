@model SupplierManagement.Models.ViewModels.SupplierViewModel

@{
    ViewData["Title"] = "Create Supplier";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-plus"></i> Create New Supplier
                    </h4>
                    <a class="btn btn-light btn-sm" asp-action="Index">Back</a>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter supplier name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="CreatedByUser" class="form-label fw-bold"></label>
                            <input asp-for="CreatedByUser" class="form-control" placeholder="firstname.lastname" />
                            <span asp-validation-for="CreatedByUser" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label fw-bold"></label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter supplier address (optional)"></textarea>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                        <div class="form-text">Optional - You can leave this field empty</div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end pt-3">
                        <a class="btn btn-outline-secondary me-md-2" asp-action="Index">Cancel</a>
                        <button type="submit" class="btn btn-primary">Create Supplier</button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="fas fa-info-circle text-info"></i> Guidelines
                </h6>
                <ul class="list-unstyled mb-0">
                    <li><i class="fas fa-check text-success me-2"></i>Supplier name is required</li>
                    <li><i class="fas fa-check text-success me-2"></i>Created by user should follow format: firstname.lastname</li>
                    <li><i class="fas fa-info-circle text-info me-2"></i>You can add rates after creating the supplier</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
